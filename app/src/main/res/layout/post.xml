<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:layout_marginTop="6dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="9dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView

            android:id="@+id/field1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Lecture"
            android:textColor="#FFA000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="serif" />


        <TextView
            android:id="@+id/field2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/field1"
            android:layout_centerHorizontal="true"
            android:shadowColor="#000000"
            android:shadowRadius="1"
            android:text="Software Engineering"
            android:textColor="#FFA000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/layout_post_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/field2"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView

                android:id="@+id/field3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="Beta Testing"
                android:textSize="20sp"
                android:textColor="#FBC02D"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/field4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="10.15 PM"
                android:textColor="#FBC02D"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/field5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FBC02D"
                android:layout_gravity="center"
                android:text="Kapote Sir"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <Button
            android:id="@+id/field6"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/layout_post_data"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:autoLink="web"
            android:background="#616161"
            android:clickable="true"
            android:text="Learn More"
            android:textColor="#fafafa"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </RelativeLayout>
</android.support.v7.widget.CardView>