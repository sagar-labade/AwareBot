<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout3"
        android:background="#c6fabd2e"
        android:padding="10dp">

        <EditText
            android:id="@+id/et_other_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColorHint="#95000000"
            android:textColor="#000000"
            android:hint="Title:" />

        <EditText
            android:id="@+id/et_other_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#95000000"
            android:textColor="#000000"
            android:inputType="textMultiLine"
            android:lines="4"
            android:layout_below="@+id/et_other_title"
            android:gravity="center_horizontal|center_vertical"
            android:hint="Description:" />
        <EditText
            android:id="@+id/et_other_teacher"
            android:layout_below="@+id/et_other_description"
            android:layout_width="match_parent"
            android:textColorHint="#95000000"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:hint="Teacher:"
            android:gravity="center_horizontal"/>
        <EditText
            android:id="@+id/et_other_web"
            android:layout_below="@+id/et_other_teacher"
            android:layout_width="match_parent"
            android:textColorHint="#95000000"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textWebEditText"
            android:lines="2"
            android:hint="Website/Video URL (Optional):"
            android:gravity="center_horizontal"/>
        <Button
            android:id="@+id/btn_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/more"
            android:drawableRight="@drawable/more"
            android:layout_below="@id/et_other_web"
            android:text="Select Class" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_create_other_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Create Post" />
</RelativeLayout>
